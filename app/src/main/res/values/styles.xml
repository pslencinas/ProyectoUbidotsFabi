<resources>

    <!-- Base application theme. -->
    <style name="UbidotsTheme" parent="android:Theme.Holo.Light">
        <item name="android:editTextStyle">@style/EditText</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/UbidotsTheme.Overflow</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="UbidotsTheme.NoActionBar" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:editTextStyle">@style/EditText</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="UbidotsTheme.Text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#7F8C8D</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">26dip</item>
        <item name="android:paddingRight">26dip</item>
        <item name="android:paddingTop">16dip</item>
        <item name="android:paddingBottom">16dip</item>
    </style>

    <style name="UbidotsTheme.ActionBarTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="UbidotsTheme.Button" parent="android:Widget.Button">
        <item name="android:background">@color/ubidots_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/button_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/button_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/button_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/button_vertical_margin</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="UbidotsTheme.RedButton" parent="android:Widget.Button">
        <item name="android:background">@color/ubidots_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/button_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/button_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/button_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/button_vertical_margin</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Ubidots.GreenButton" parent="android:Widget.Button">
        <item name="android:background">@color/ubidots_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/button_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/button_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/button_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/button_vertical_margin</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Ubidots.ButtonToggle" parent="android:Widget">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:track">@drawable/switch_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:thumb">@drawable/thumb_bg</item>
        <item name="android:textOn">@string/enabled</item>
        <item name="android:textOff">@string/disabled</item>
    </style>

    <style name="UbidotsTheme.Overflow">
        <item name="android:src">@drawable/ic_action_core_overflow</item>
    </style>

    <style name="EditText" parent="android:Widget.EditText">
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="ActionBarStyle" parent="android:Widget.Holo.ActionBar.Solid">
        <item name="android:background">@color/ubidots_blue</item>
    </style>
</resources>
